<h1>Login</h1>

<%= @error %>

<form method="post" action="/login">
  <div>
    <input type="email" name="email" placeholder="E-mail" value="<%= @user.email if @user %>"/>
  </div>

  <div>
    <input type="password" name="password" placeholder="Password"/>
  </div>

  <input type="submit" value="Submit" />
</form>



